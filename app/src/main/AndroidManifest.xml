<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comshelin.comshelinguide">

    <application
        android:name=".CGApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".ui.recipe_info.RecipeInfoActivity"></activity>
        <activity android:name=".ui.recipe_add.RecipeAddActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.chat.ChatActivity"
            android:theme="@style/ChatTheme" />
        <activity android:name=".ui.info.InfoActivity" />
        <activity
            android:name=".ui.add.AddActivity"
            android:theme="@style/ChatTheme" />
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>